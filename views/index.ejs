<div class="container">
  <h1 class="text-center">The Original 151 Pokemon</h1>
  <p class="text-center">
    <a href="/pokemon">Favorites</a>
  </p>

  <% pokemon.forEach(function(pokemon) { %>
    <div class="well">
      <h2><%= pokemon.names %><%= pokemon.name %></h2>
      
      
        <form method="POST" action="/pokemon">
          <input hidden type="text" name="name" value="<%= pokemon.names %><%= pokemon.name %>">
          <button class="btn btn-primary" type="submit">Add to Favorite Pokemon</button>
        </form> 

        <form action="/pokemon/<%= pokemon.id %>/?_method=DELETE" method="POST">
          <input type="submit" value="Delete">
        </form> 
      
      
    </div>
  <% }); %>
</div>
